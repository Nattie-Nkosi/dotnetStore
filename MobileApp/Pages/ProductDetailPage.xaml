<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MobileApp.ViewModels"
             x:Class="MobileApp.Pages.ProductDetailPage"
             x:DataType="viewmodels:ProductDetailViewModel"
             Title="Product Details"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <ActivityIndicator
                IsRunning="{Binding IsLoading}"
                IsVisible="{Binding IsLoading}"
                Color="#512BD4"
                HeightRequest="60"
                Margin="0,40,0,0" />

            <VerticalStackLayout
                Spacing="16"
                Padding="16"
                IsVisible="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}">

                <!-- Product Image Section -->
                <Border
                    Padding="0"
                    BackgroundColor="White"
                    StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="24" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="#D0D0D0" Offset="0,4" Radius="16" Opacity="0.25" />
                    </Border.Shadow>
                    <Grid Padding="24">
                        <!-- Stock Badge -->
                        <Border
                            Padding="12,6"
                            HorizontalOptions="Start"
                            VerticalOptions="Start"
                            BackgroundColor="{Binding Product.IsInStock, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#4CAF50:#F44336'}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12" />
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="Black" Offset="0,2" Radius="6" Opacity="0.2" />
                            </Border.Shadow>
                            <Label
                                Text="{Binding Product.IsInStock, Converter={StaticResource BoolToStockConverter}}"
                                FontSize="13"
                                FontAttributes="Bold"
                                TextColor="White" />
                        </Border>

                        <!-- Product Image -->
                        <Image
                            Source="{Binding Product.FullImageUrl}"
                            Aspect="AspectFit"
                            HeightRequest="320"
                            Margin="0,50,0,0" />
                    </Grid>
                </Border>

                <!-- Product Info Section -->
                <Border
                    Padding="24"
                    BackgroundColor="White"
                    StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="24" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="#D0D0D0" Offset="0,4" Radius="16" Opacity="0.25" />
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="14">

                        <!-- Brand & Type -->
                        <HorizontalStackLayout Spacing="8">
                            <Border
                                Padding="10,6"
                                BackgroundColor="#EDE7F6"
                                StrokeThickness="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>
                                <Label
                                    Text="{Binding Product.Brand}"
                                    FontSize="13"
                                    FontAttributes="Bold"
                                    TextColor="#512BD4" />
                            </Border>
                            <Border
                                Padding="10,6"
                                BackgroundColor="#F5F5F5"
                                StrokeThickness="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>
                                <Label
                                    Text="{Binding Product.Type}"
                                    FontSize="13"
                                    TextColor="#666666" />
                            </Border>
                        </HorizontalStackLayout>

                        <!-- Product Name -->
                        <Label
                            Text="{Binding Product.Name}"
                            FontSize="30"
                            FontAttributes="Bold"
                            TextColor="#1A1A1A"
                            LineBreakMode="WordWrap" />

                        <!-- Price -->
                        <Label
                            Text="{Binding Product.FormattedPrice}"
                            FontSize="36"
                            FontAttributes="Bold"
                            TextColor="#512BD4" />

                        <!-- Free Delivery -->
                        <Border
                            Padding="12,6"
                            BackgroundColor="#E8F5E9"
                            StrokeThickness="0"
                            HorizontalOptions="Start"
                            IsVisible="{Binding Product.HasFreeDelivery}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12" />
                            </Border.StrokeShape>
                            <HorizontalStackLayout Spacing="6">
                                <Label
                                    Text="ðŸšš"
                                    FontSize="16"
                                    VerticalOptions="Center" />
                                <Label
                                    Text="Free Delivery"
                                    FontSize="13"
                                    FontAttributes="Bold"
                                    TextColor="#2E7D32"
                                    VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Border>

                        <!-- Divider -->
                        <BoxView
                            Color="#EEEEEE"
                            HeightRequest="1.5"
                            Margin="0,12" />

                        <!-- Description -->
                        <Label
                            Text="ðŸ“„ Product Description"
                            FontSize="20"
                            FontAttributes="Bold"
                            TextColor="#1A1A1A" />

                        <Label
                            Text="{Binding Product.Description}"
                            FontSize="15"
                            TextColor="#757575"
                            LineBreakMode="WordWrap"
                            LineHeight="1.4" />

                        <!-- Product Details -->
                        <BoxView
                            Color="#EEEEEE"
                            HeightRequest="1.5"
                            Margin="0,12" />

                        <Label
                            Text="â„¹ï¸ Product Details"
                            FontSize="20"
                            FontAttributes="Bold"
                            TextColor="#1A1A1A"
                            Margin="0,0,0,12" />

                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                Text="Brand:"
                                FontSize="14"
                                TextColor="#666666" />
                            <Label
                                Grid.Row="0"
                                Grid.Column="1"
                                Text="{Binding Product.Brand}"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="#333333" />

                            <Label
                                Grid.Row="1"
                                Grid.Column="0"
                                Text="Category:"
                                FontSize="14"
                                TextColor="#666666" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                Text="{Binding Product.Type}"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="#333333" />

                            <Label
                                Grid.Row="2"
                                Grid.Column="0"
                                Text="In Stock:"
                                FontSize="14"
                                TextColor="#666666" />
                            <Label
                                Grid.Row="2"
                                Grid.Column="1"
                                Text="{Binding Product.QuantityInStock}"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="#333333" />
                        </Grid>

                    </VerticalStackLayout>
                </Border>

                <!-- Quantity & Add to Cart Section -->
                <Border
                    Padding="24"
                    BackgroundColor="White"
                    StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="24" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="#D0D0D0" Offset="0,4" Radius="16" Opacity="0.25" />
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="20">

                        <Label
                            Text="ðŸ›’ Select Quantity"
                            FontSize="20"
                            FontAttributes="Bold"
                            TextColor="#1A1A1A" />

                        <!-- Quantity Selector -->
                        <Border
                            Padding="4"
                            StrokeThickness="2"
                            Stroke="#EEEEEE">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="16" />
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="*,2*,*" HeightRequest="56">
                                <Button
                                    Grid.Column="0"
                                    Text="âˆ’"
                                    FontSize="28"
                                    FontAttributes="Bold"
                                    BackgroundColor="#F5F5F5"
                                    TextColor="#512BD4"
                                    CornerRadius="14"
                                    Margin="2"
                                    Command="{Binding DecreaseQuantityCommand}" />

                                <Border
                                    Grid.Column="1"
                                    BackgroundColor="#FAFAFA"
                                    StrokeThickness="0"
                                    Margin="4,2">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12" />
                                    </Border.StrokeShape>
                                    <Label
                                        Text="{Binding Quantity}"
                                        FontSize="24"
                                        FontAttributes="Bold"
                                        TextColor="#1A1A1A"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center" />
                                </Border>

                                <Button
                                    Grid.Column="2"
                                    Text="+"
                                    FontSize="28"
                                    FontAttributes="Bold"
                                    BackgroundColor="#F5F5F5"
                                    TextColor="#512BD4"
                                    CornerRadius="14"
                                    Margin="2"
                                    Command="{Binding IncreaseQuantityCommand}" />
                            </Grid>
                        </Border>

                        <!-- Add to Cart Button -->
                        <Border
                            StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="16" />
                            </Border.StrokeShape>
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#512BD4" Offset="0.0" />
                                    <GradientStop Color="#7B4FDB" Offset="1.0" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Shadow>
                                <Shadow Brush="#512BD4" Offset="0,4" Radius="12" Opacity="0.3" />
                            </Border.Shadow>
                            <Button
                                Text="ðŸ›’ Add to Cart"
                                FontSize="18"
                                FontAttributes="Bold"
                                BackgroundColor="Transparent"
                                TextColor="White"
                                HeightRequest="56"
                                Command="{Binding AddToCartCommand}"
                                IsEnabled="{Binding Product.IsInStock}" />
                        </Border>

                    </VerticalStackLayout>
                </Border>

                <!-- Back to Catalog Button -->
                <Border
                    Padding="16,12"
                    BackgroundColor="Transparent"
                    StrokeThickness="2"
                    Stroke="#512BD4">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Button
                        Text="â† Continue Shopping"
                        FontSize="16"
                        FontAttributes="Bold"
                        BackgroundColor="Transparent"
                        TextColor="#512BD4"
                        Clicked="OnBackToCatalogClicked" />
                </Border>

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
